@model User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login & Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap library -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
    
    <!-- Local Style Sheet -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/site.css" />

     <!-- <script src="main.js"></script> -->
</head>
<body>
    <div class="container  border bkgd-lightblue">

        <!-- Main: Begin -->
        <div class="row">
            <div class="col-sm-12 col-md-2 col-lg-2"></div>
            <div class="col-sm-12 col-md-8 col-lg-8 wp-box wp-box-4">

                <!-- Main Row: Begin -->
                <div class="row mt-20">

                    <!-- Registration (Left side): Begin -->
                    <div class="col-sm-12 col-md-6 col-lg-6 border-right-2">

                        <!-- Registration Title form: Begin -->
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <h3>Register</h3>
                            </div>
                        </div>
                        <!-- Registration Title form: Ends -->

                        <!-- Registration Form: Begin -->
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <form asp-controller="User" asp-action="RegistrationSave" method="post">
                                    <div class="form-group">
                                        <label class="col-form-label" asp-for="Email"></label>
                                        <div>
                                            <input class="form-control" asp-for="Email">
                                        </div>
                                        <span class="color-error" asp-validation-for="Email"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" asp-for="FirstName"></label>
                                        <div>
                                            <input class="form-control" asp-for="FirstName">
                                        </div>
                                        <span class="color-error" asp-validation-for="FirstName"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" asp-for="LastName"></label>
                                        <div>
                                            <input class="form-control" asp-for="LastName">
                                        </div>
                                        <span class="color-error" asp-validation-for="LastName"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" asp-for="Password"></label>
                                        <div>
                                            <input class="form-control" asp-for="Password">
                                        </div>
                                        <span class="color-error" asp-validation-for="Password"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-form-label" asp-for="ConfirmPassword"></label>
                                        <div>
                                            <input class="form-control" asp-for="ConfirmPassword">
                                        </div>
                                        <span class="color-error" asp-validation-for="ConfirmPassword"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-12 col-md-8 col-lg-8"></div>
                                        <div class="col-sm-12 col-md-2 col-lg-2 ml-10">
                                            <div class="form-actions">
                                                <button type="submit" class="btn  btn-primary btn-md">Register</button>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-2 col-lg-2"></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- Registration Form: End -->

                    </div>
                    <!-- Registration (Left side): End -->

                    <!-- Login (Right side): Begin -->
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <partial name="LoginPartial"/>
                    </div>
                    <!-- Login (Right side): Begin -->

                </div>
                <!-- Main Row: End -->

             </div>
        </div>
        <!-- Main: Ends -->

    </div>
</body>
</html>